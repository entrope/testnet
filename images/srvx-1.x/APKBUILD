# Contributor: Entrope <mdpoole@troilus.org>
# Maintainer: Entrope <mdpoole@troilus.org>
pkgname=srvx
pkgver=1.4.0
_pkgver=1.4.0-rc3
pkgrel=0
pkgdesc="srvx IRC services"
url="http://srvx.org/"
arch="all"
license="GPL2+"
depends=""
depends_dev=""
makedepends="$depends_dev clang19 compiler-rt"
options="!strip"
install="$pkgname.pre-install"
pkggroups="coder-com"
pkgusers="coder-com"
source="$pkgname-$_pkgver.tar.gz"

_builddir="$srcdir"/+build

build() {
	rm -fr "$_builddir"
	mkdir -p "$_builddir"
	cd "$_builddir"
	INSTRUMENT="--coverage -fsanitize=address -fsanitize=undefined -fsanitize=cfi -flto -fvisibility=hidden"
	../$pkgname-$_pkgver/configure --prefix=/usr/share/srvx CC="clang" CFLAGS="$INSTRUMENT"
	make
}

check() {
	cd "$_builddir"
	make check
}

package() {
	cd "$_builddir"
	mkdir -p "$pkgdir"
	make install DESTDIR="$pkgdir"
	chmod go+x "$pkgdir/usr/share/srvx/srvx"
	chmod a+w "$pkgdir/usr/share/srvx"
	return 0
}
