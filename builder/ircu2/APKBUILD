# Contributor: Entrope <mdpoole@troilus.org>
# Maintainer: Entrope <mdpoole@troilus.org>
pkgname=ircu2
pkgver=2.10.12.15
pkgrel=0
pkgdesc="Undernet IRC daemon"
url="http://coder-com.undernet.org/"
arch="all"
license="GPL+"
depends="openssl"
depends_dev=""
makedepends="$depends_dev flex byacc clang17 compiler-rt openssl-dev"
install="$pkgname.pre-install"
options="!strip"
pkggroups="coder-com"
pkgusers="coder-com"
source="$pkgname.tar.gz"

_builddir="$srcdir"/+build

build() {
	rm -fr "$_builddir"
	mkdir -p "$_builddir"
	cd "$_builddir"
	INSTRUMENT="--coverage -fsanitize=address -fsanitize=undefined -fsanitize=cfi -flto -fvisibility=hidden"
	../$pkgname/configure --prefix=/usr --without-symlink --with-owner=coder-com --with-group=coder-com --enable-debug CC="clang-17" CFLAGS="-g $INSTRUMENT" LDFLAGS="-g $INSTRUMENT"
	make
}

check() {
	cd "$_builddir"
	make -C ircd/test
	./ircd/test/ircd_chattr_t
	./ircd/test/ircd_in_addr_t
	./ircd/test/ircd_match_t
	./ircd/test/ircd_string_t
}

package() {
	cd "$_builddir"
	mkdir -p "$pkgdir"/usr/lib
	make install prefix="$pkgdir"/usr DPATH="$pkgdir"/usr/lib
	return 0
}
